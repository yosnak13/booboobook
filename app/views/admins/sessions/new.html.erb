<div class="row justify-content-center">
  <div class="col-md-5">
    <h3 class="mt-3 mb-3">管理者ログイン</h3>

    <hr>

    <%= form_with model: @admin, url: admin_session_path, local: true, class: '' do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group py-3">
        <%=
          f.email_field :email,
          class: "form-control #{"is-invalid" if alert }",
          autofocus: "true",
          required: "required",
          autocomplete: "email",
          placeholder: "メールアドレス"
        %>
        <% if alert %>
          <span>
            <strong>メールアドレスが正しくない可能性があります。</strong>
          </span>
        <% end %>
      </div>

      <div class="form-group py-3">
        <%=
          f.password_field :password,
          class: "form-control #{"is-invalid" if alert }",
          autofocus: "true",
          autocomplete: "current-password",
          placeholder: "パスワード"
        %>

        <% if alert %>
          <span>
            <strong>パスワードが正しくない可能性があります。</strong>
          </span>
        <% end %>
      </div>

      <%# <% if devise_mapping.rememberable? %>
        <%# <div class="field">
          <%= f.check_box :remember_me %>
          <%# <%= f.label :remember_me %>
        <%# </div> %>
      <%# <% end %>

      <div class="form-group py-3 d-grid gap-1 col-4 mx-auto">
        <%=  f.submit "ログイン", class: "btn btn-pink"%>
        <%= image_tag('King.png') %>
      </div>
    <% end %>
  </div>
</div>

