<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">新規会員登録</h3>

        <hr>

        <%= form_with model: @user, url: user_registration_path, local: true, class: '' do |f| %>
        <div class="form-group row">
          <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
            氏名
            <span class="ml-1 samazon-require-input-label">
              <span class="samazon-require-input-label-text">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if @user.errors.messages[:name].present? }",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "氏名"
            %>

            <% if @user.errors.messages[:name].present? %>
              <span class="">
                <strong><%= @user.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1">
              <span class="">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if @user.errors.messages[:email].present? } samazon-login-input",
              autofocus: "true",
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if @user.errors.messages[:email].present? %>
              <span class="samazon-error-message">
                <strong><%= @user.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1">
              <span class="">必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if @user.errors.messages[:password].present? }",
              autofocus: "true"
            %>
            <% if @user.errors.messages[:password].present? %>
            <span class="samazon-error-message">
              <strong><%= @user.errors.full_messages_for(:password).first %></strong>
            </span>
            <% end %>
            </div>
          </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード確認
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control",
              autocomplete: "new-password"
            %>
          </div>
        </div>

        <div class="form-group py-3 d-grid gap-1 col-4 mx-auto">
          <%=  f.submit "アカウント作成", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
