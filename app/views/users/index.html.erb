<div>
  <% @character.each do |pork| %>
    <div class="text-center">
      <%= image_tag (url_for(pork.photo)), class: "character-size" %>
    </div>

    <div>
      <a><%= pork.name %> Lv.<%= pork.level %></a>
    </div>

    <div class="progress">
      <div
      class="progress-bar"
      role="progressbar"
      style="width: <%= @progress %>%"
      aria-valuenow=<%= @progress.to_s %>
      aria-valuemin="0"
      aria-valuemax="100"></div>
    </div>

    <div class="d-flex justify-content-end">
      <p>EXP <%= @need_exp.thresold - @need_exp_for_next_level %>/<%= @need_exp.thresold %></p>
    </div>

    <div>
      <%= pork.description %>
    </div>
  <% end %>

  <div class="d-flex justify-content-around">
    <%= link_to image_tag("アイコン_貯金箱.png", class: "icon-size"), user_characters_path(user_id: current_user) %>
    <%= link_to image_tag("アイコン_読書記録.png", class: "icon-size"), "#" %>
    <%= link_to image_tag("アイコン_記録.png", class: "icon-size"), user_study_times_path(user_id: current_user) %>
    <%= link_to image_tag("アイコン_本棚.png", class: "icon-size"), user_books_path(user_id: current_user) %>
  </div>
</div>
